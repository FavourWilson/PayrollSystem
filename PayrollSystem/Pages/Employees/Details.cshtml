@page
@model PayrollSystem.Pages.Employees.DetailsModel
@{
    var photopath = "~/images/" + (Model.Employee.Photopath ?? "GCBN2036.JPG");
}


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top img-thumbnail" src="@photopath" asp-append-version="true" />
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Department: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-page="Index" class="btn btn-primary m-1">Back</a>
               
            </div>
        </div>
    </div>
</div>

