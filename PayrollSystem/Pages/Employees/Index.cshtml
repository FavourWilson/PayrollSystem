@page
@model PayrollSystem.Pages.Employees.IndexModel
@{
}

<div class="card-deck">
    @if (Model != null)
    {
        @foreach (var employee in Model.Employee)
        {
            var PhotoPath = "~/images" + (employee.Photopath ?? "");

            <div class="card m-3">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>
                <div class="card-body">
                    <p>@employee.Department</p>
                    <img class="card-img-top img-thumbnail" src="@PhotoPath" asp-append-version="true" />
                </div>


                <div class="card-footer text-center">
                    <a asp-page="/Employees/Details" asp-route-ID="@employee.Id" class="btn btn-primary m-1">Details</a>
                    <a asp-page="/Employees/Edit" asp-route-ID="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    <a asp-page="/Employees/Delete" asp-route-ID="@employee.Id" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>


        }
    }

</div>