@page
@model PayrollSystem.Pages.Expense.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Expenses</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expenses.Expense" class="control-label"></label>
                <input asp-for="Expenses.Expense" class="form-control" />
                <span asp-validation-for="Expenses.Expense" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.AmountSpent" class="control-label"></label>
                <input asp-for="Expenses.AmountSpent" class="form-control" />
                <span asp-validation-for="Expenses.AmountSpent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.DateSpent" class="control-label"></label>
                <input type="date" asp-for="Expenses.DateSpent" class="form-control" />
                <span asp-validation-for="Expenses.DateSpent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.Department" class="control-label"></label>
                <select asp-for="Expenses.Department" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<Dept>()">

                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Expenses.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.Employee" class="control-label"></label>


                <select class="custom-select mr-sm-2">

                    <option>Please select</option>
                    @foreach (var item in Model.EmployeeRepository.GetEmployees())
                    {
                        <option value="@item.Name">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
